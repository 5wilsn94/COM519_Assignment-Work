<!DOCTYPE html>
<html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta name="viewport"
        content="width=device-width, initial-scale=1"
      />
      <meta name="description" content="" />
      <title>WHSmith Complaints</title>

      <link
        rel="canonical"
        href="https://getbootstrap.com/docs/4.5/examples/album/"
      />

      <link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
        crossorigin="anonymous"
      />

      <link href="css/album.css" rel="stylesheet" />
    </head>
    <body>
      <%- include('common/header'); -%>

      <div class="container">
        <h1 class="text-center">Create a complaint</h1>
        <div class="row justify-content-md-center">
          <div class="col-">
            <form method="POST" action="/create-complaint">
              <div class="form-group">
                <label for="exampleFormControlSelect1">Select Employee</label>
                <select
                  value="<%= complaint.employee_id %>"
                  class="form-control"
                  name="employee_id"
                  id="exampleFormControlSelect1"
                >
                  <% employees.forEach( employee => { %>
                  <option value="<%= employee._id %>"><%= employee.employeeID %></option>
                  <% }) %>
                </select>
              </div>
              
            <div class="form-group">
              <label for="name">Store Number</label>
              <input
                value="<%= complaint.store_number %>"
                type="number"
                class="form-control"
                id="name"
                name="store_number"
              />

              <% if (errors['store_number']) { %>
              <p style="color: red"><%= errors['store_number'].message %></p>
              <% } %>
            </div>

            <div class="form-group">
              <label for="name">Time</label>
              <input
                value="<%= complaint.time %>"
                type="text"
                class="form-control"
                id="name"
                name="time"
                placeholder="Enter Time"
              />

              <% if (errors['time']) { %>
              <p style="color: red"><%= errors['time'].message %></p>
              <% } %>
            </div>

            <div class="form-group">
                <label for="name">Complaint Type</label>
                <input
                  value="<%= complaint.complaint_type %>"
                  type="text"
                  class="form-control"
                  id="name"
                  name="complaint_type"
                  placeholder="Enter Complaint Type"
                />
  
                <% if (errors['complaint_type']) { %>
                <p style="color: red"><%= errors['complaint_type'].message %></p>
                <% } %>
            </div>

            <div class="form-group">
                <label for="name">Description</label>
                <input
                  value="<%= complaint.description %>"
                  type="text"
                  class="form-control"
                  id="name"
                  name="description"
                  placeholder="Enter Description"
                />
  
                <% if (errors['description']) { %>
                <p style="color: red"><%= errors['description'].message %></p>
                <% } %>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
  </div>
</div>
<%- include('common/footer'); -%>
</body>
</html>